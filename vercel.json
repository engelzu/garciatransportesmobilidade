{
  "functions": {
    "api/stripe-payment.js": {
      "maxDuration": 30
    },
    "api/webhook.js": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/stripe-payment",
      "destination": "/api/stripe-payment.js"
    },
    {
      "source": "/api/webhook",
      "destination": "/api/webhook.js"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, stripe-signature"
        }
      ]
    }
  ]
}
